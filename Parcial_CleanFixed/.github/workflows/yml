name: SonarCloud .NET

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build:
    name: Build and analyze with SonarCloud
    runs-on: windows-latest

    # Todas las rutas de "run" se ejecutan dentro de Parcial_CleanFixed
    defaults:
      run:
        working-directory: Parcial_CleanFixed

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup .NET SDK
        uses: actions/setup-dotnet@v4
        with:
          dotnet-version: '6.0.x'

      - name: Add MSBuild to PATH
        uses: microsoft/setup-msbuild@v2

      - name: Cache Sonar packages
        uses: actions/cache@v3
        with:
          path: ~/.sonar/cache
          key: ${{ runner.os }}-sonar
          restore-keys: ${{ runner.os }}-sonar

      - name: Install SonarScanner for .NET
        run: dotnet tool install --global dotnet-sonarscanner

      - name: Build and analyze
        shell: pwsh
        env:
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          # Añadimos la carpeta de herramientas globales al PATH
          $env:PATH += ";$env:USERPROFILE\.dotnet\tools"

          # Inicio del análisis SonarCloud
          dotnet sonarscanner begin `
            /k:"Saenz10200_ParcialCleanArch" `
            /o:"saenz10200" `
            /d:sonar.host.url="https://sonarcloud.io" `
            /d:sonar.token="$env:SONAR_TOKEN"

          # Compila la solución (usa el .sln que tú tienes en Parcial_CleanFixed)
          msbuild BadCleanArch.sln /t:Rebuild

          # Fin del análisis (sube los resultados a SonarCloud)
          dotnet sonarscanner end /d:sonar.token="$env:SONAR_TOKEN"
